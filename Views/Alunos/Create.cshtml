@model Aluno

@{
    ViewData["Title"] = "Cadastro de aluno";
}

<h4>Cadastro de novo aluno</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="Nome" class="control-label"></label>
                <input asp-for="Nome" class="form-control" />
                <span asp-validation-for="Nome" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Matricula" class="control-label"></label>
                <input asp-for="Matricula" class="form-control" />
                <span asp-validation-for="Matricula" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Notas" class="control-label"></label>
                <input asp-for="Notas" class="form-control" />
                <span asp-validation-for="Notas" class="text-danger"></span>
            </div>
            <div class="form-group mt-3">
                <button type="submit" value="Create" class="btn btn-primary"><i class="bi bi-check-circle"></i> Salvar</button>
            </div>
        </form>
    </div>
</div>

<div class="mt-2">
    <a class="btn btn-outline-dark" asp-action="Index"><i class="bi bi-arrow-counterclockwise"></i> Retornar para a Lista</a>
</div>


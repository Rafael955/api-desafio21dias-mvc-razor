@model web_renderizacao_server_sidee.Models.Paginacao<Aluno>

@{
    ViewData["Title"] = "Listagem de alunos";
}

<h1>Listagem de Alunos</h1>

<p>
    <a asp-action="Create" class="btn btn-primary"><i class="bi bi-person-circle"></i> Cadastrar novo aluno</a>
</p>

<div class="card">
   <div class="card-body">
      <table class="table table-hover">
         <thead>
            <tr>
               <th scope="col">Id</th>
               <th scope="col"><i class="bi bi-person"></i> Nome</th>
               <th scope="col"><i class="bi bi-123"></i> Matricula</th>
               <th scope="col"><i class="bi bi-file-text"></i> Notas</th>
               <th scope="col"><i class="bi bi-gear"></i> Ações</th>
            </tr>
         </thead>
         <tbody>
            @foreach (var item in Model.Results) {
                <tr>
                    <th scope="row">@Html.DisplayFor(modelItem => item.Id)</th>
                    <td>@Html.DisplayFor(modelItem => item.Nome)</td>
                    <td>@Html.DisplayFor(modelItem => item.Matricula)</td>
                    <td>@Html.DisplayFor(modelItem => item.Notas)</td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-info"><i class="bi bi-info-circle"></i> Detalhes</a>
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-warning"><i class="bi bi-pencil-square"></i> Editar</a>
                        <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-danger"><i class="bi bi-trash"></i> Remover</a>
                    </td>
                </tr>
            }
         </tbody>
      </table>
      
      @if(Model.CurrentPage > 1)
      {
         <a href="/alunos?pagina=@(Model.CurrentPage - 1)">@("<<< Anterior")</a>
      }
      
      @if(Model.CurrentPage > 1 && Model.PageSize > Model.CurrentPage)
      {
         <i class="ml-2 mr-2">|</i>
      }

      @if(Model.PageSize > Model.CurrentPage)
      {
         <a href="/alunos?pagina=@(Model.CurrentPage + 1)">@("Próxima >>>")</a>
      }

   </div>
</div>